---
import IconDarkMode from "../common/IconDarkMode.astro";
import IconLightMode from "../common/IconLightMode.astro";
---
<label
  class="inline-flex items-center relative cursor-pointer"
>
  <input class="peer hidden" id="toggle-theme" type="checkbox" />
  <div
    class="relative w-[5.75rem] border peer-checked:border-black h-[var(--h-btn)] border-white-light peer-checked:bg-white-light/35 bg-white-light/15 rounded-full after:absolute after:content-[''] after:w-10 after:h-10 peer-checked:after:bg-black after:bg-white-light after:rounded-full after:top-[0.3125rem] peer-checked:after:left-[2.84rem] active:after:w-[var(--h-btn)] after:left-[5.3125rem] after:translate-x-[-100%] after:duration-300 backdrop-blur-sm"
  >
  </div>
  <IconLightMode class="fill-white-light absolute w-7 h-7 left-[0.75rem]" />
  <IconDarkMode class="fill-black absolute w-7 h-7 right-[0.75rem]" />
</label>

<script>
  function applyTheme() {
    const body = document.body;
    const themeSwitch = document.getElementById(
      "toggle-theme"
    ) as HTMLInputElement;

    if (localStorage.theme === "light" || themeSwitch.checked) {
      body.classList.remove("dark");
      themeSwitch.checked = true;
    } else {
      body.classList.add("dark");
    }
  }

  document.addEventListener("astro:after-swap", applyTheme);
  applyTheme();

  document.addEventListener("astro:page-load", () => {
    const themeSwitch = document.getElementById(
      "toggle-theme"
    ) as HTMLInputElement;
    const body = document.body;

    themeSwitch.addEventListener('click', () => {
      localStorage.setItem('switchActive', 'active');
    })

    themeSwitch.addEventListener("change", () => {
      if (themeSwitch.checked) {
        body.classList.remove("dark");
        localStorage.setItem("theme", "light");
      } else {
        body.classList.add("dark");
        localStorage.setItem("theme", "dark");
      }
    });

    console.log(localStorage.getItem("theme"));
    console.log(localStorage.getItem("switchActive"));
  });
</script>

