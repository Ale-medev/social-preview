---
import Container from "../ui/Container.astro";

interface Props {
  es?: boolean;
  en?: boolean;
  linkBook: string;
  imgOne: any;
  imgTwo: any;
  imgThree: any;
  imgFour: any;
  imgFive: any;
}

const { es, en, linkBook, imgOne, imgTwo, imgThree, imgFour, imgFive } =
  Astro.props;
---

<Container class="pt-[var(--p-section)]" data-section="pre-footer">
  <div class="pb-16">
    <p class="flex justify-center"> 
      <a
      href={linkBook}
      class="uppercase font-display text-display-xxl text-center block text-black dark:text-white-light hover:italic"
    >
      {es ? "Reservar" : en ? "Book now" : ""}</a
    >
    </p>
    <div
      class="w-full flex justify-between sm:justify-around sm:px-[10.5rem] gap-5 sm:gap-0"
    >
      <picture class="w-[9.25rem] img-ani-1">
        <img
          src={imgOne.url}
          alt={imgOne.alt}
          class="w-full"
          loading="lazy"
        />
      </picture>

      <picture class="w-[9.25rem] img-ani-2 relative -z-10">
        <img
          src={imgTwo.url}
          alt={imgTwo.alt}
          class="w-full"
          loading="lazy"
        />
      </picture>

      <picture class="sm:px-8 img-ani-3">
        <img
          src={imgThree.url}
          alt={imgThree.alt}
          class="w-[9.25rem]"
          loading="lazy"
        />
      </picture>

      <picture class="w-[9.25rem] img-ani-4 hidden sm:block ">
        <img
          src={imgFour.url}
          alt={imgFour.alt}
          class="w-full"
          loading="lazy"
        />
      </picture>

      <picture class="w-[9.25rem] img-ani-5">
        <img
          src={imgFive.url}
          alt={imgFive.alt}
          class="w-full"
          loading="lazy"
        />
      </picture>
    </div>
  </div>
</Container>

<style>
  a{
    position: relative;
  }

  a::before {
  content: '';
  width: 0;
  height: 2px;
  border-radius: 2px;
  background-color: currentColor;
  position: absolute;
  bottom: -.1em;
  right: 0;
  transition: right .4s, width .4s, left .4s;
}

a:hover::before {
  width: 100%;
  left: 0;
}

img{
  pointer-events: none;
}
</style>